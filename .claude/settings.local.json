{
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm add:*)",
      "Bash(docker-compose up:*)",
      "Bash(docker-compose:*)"
    ],
    "deny": [
        "**/.env*",
        "**/*.pem",
        "**/*.key",
        "**/secrets/**",
        "**/credentials/**"
    ]
  }
}